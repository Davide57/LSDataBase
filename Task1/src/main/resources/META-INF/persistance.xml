<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="bookshop">
        <properties>
            <properties name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bookshop?serverTimezone=UTC"/>
            <properties name="javax.persistence.jdbc.user" value="root" />
            <properties name="javax.persistence.jdbc.password" value="" />         
            <properties name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <properties name="hibernate.show_sql" value="true" /> 
            <properties name="hibernate.format_sql" value="true" />
        </properties>  
    </persistence-unit>

</persistence>
